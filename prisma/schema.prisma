generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Quote {
  id           Int        @id @default(autoincrement())
  quote        String
  sourceNameId Int
  sourceName   SourceName @relation(fields: [sourceNameId], references: [id])
  sourceTypeId Int
  sourceType   SourceType @relation(fields: [sourceTypeId], references: [id])
  reference    String
  sourceUrl    String
  addedAt      DateTime   @default(now())
  authors      Author[]   @relation("QuoteAuthors")
  tags         Tag[]      @relation("QuoteTags")
}

model Author {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  bio    String?
  quotes Quote[] @relation("QuoteAuthors")
}

model SourceName {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  quotes Quote[]
}

model SourceType {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  quotes Quote[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  quotes Quote[] @relation("QuoteTags")
}
